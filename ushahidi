<VirtualHost \*:80>
  ServerAdmin webmaster@localhost
 
  DocumentRoot /var/www/platform/httpdocs/
 
  <Directory /var/www/platform/httpdocs>
    Options FollowSymLinks MultiViews
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>
 
  ErrorLog /var/log/apache2/error-ushahidi.log
  LogLevel warn
 
  CustomLog /var/log/apache2/access-ushahidi.log combined
 
</VirtualHost>
